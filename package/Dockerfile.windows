ARG SERVERCORE_VERSION
FROM mcr.microsoft.com/windows/servercore:${SERVERCORE_VERSION}
ARG RELEASES
ARG VERSION
ENV RELEASES=$RELEASES
ENV VERSION=$VERSION
SHELL ["powershell", "-NoLogo", "-Command", "$ErrorActionPreference = 'Stop'; $ProgressPreference = 'SilentlyContinue';"]
RUN pushd c:\; \
    $URL = 'https://github.com/git-for-windows/git/releases/download/v2.30.1.windows.1/MinGit-2.30.1-64-bit.zip'; \
    \
    Write-Host ('Downloading git from {0} ...' -f $URL); \
    [Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; \
    Invoke-WebRequest -UseBasicParsing -OutFile c:\git.zip -Uri $URL; \
    \
    Write-Host 'Expanding ...'; \
    Expand-Archive -Force -Path c:\git.zip -DestinationPath c:\git\.; \
    \
    Write-Host 'Cleaning ...'; \
    Remove-Item -Force -Recurse -Path c:\git.zip; \
    \
    Write-Host 'Complete.'; \
    popd;
RUN $URL = 'https://{0}/drone-docker-image-digests/{1}/drone-docker-image-digests-windows-amd64.exe' -f $env:RELEASES, $env:VERSION; \
    New-Item -Path 'c:\\' -Name 'drone-docker-image-digests' -ItemType 'directory'; \
    Write-Host ('Downloading binary from {0} ...' -f $URL); \
    [Net.ServicePointManager]::SecurityProtocol = [Net.SecurityProtocolType]::Tls12; \
    Invoke-WebRequest -UseBasicParsing -OutFile c:/drone-docker-image-digests/drone-docker-image-digests.exe -Uri $URL;
CMD ["C:\\drone-docker-image-digests\\drone-docker-image-digests.exe"]
